    <ImageView
        android:id="@+id/iv_password"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_centerVertical="true"
        android:layout_marginLeft="35dp"
        android:layout_below="@+id/tv_sign_up"
        android:layout_marginTop="75dp"
        android:src="@drawable/password_icon" />

    <EditText
        android:id="@+id/et_password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/iv_password"
        android:layout_below="@+id/tv_sign_up"
        android:layout_marginTop="80dp"
        android:background="@null"
        android:layout_marginLeft="5dp"
        android:hint="Password"
        android:inputType="phone"
        android:maxLines="1"
        android:textColor="@color/colorGray2"
        android:textColorHint="@color/colorGray2"
        android:textCursorDrawable="@null"
        android:textSize="20dp" />

    <View
        android:id="@+id/view_password"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_below="@+id/et_password"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="35dp"
        android:layout_marginRight="35dp"
        android:layout_marginTop="5dp"
        android:background="@color/colorDarkGray"></View>

    <ImageView
        android:id="@+id/iv_confirm_password"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_centerVertical="true"
        android:layout_marginLeft="35dp"
        android:layout_below="@+id/et_password"
        android:layout_marginTop="25dp"
        android:src="@drawable/confirm_password_icon" />

    <EditText
        android:id="@+id/et_confirm_password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/iv_confirm_password"
        android:layout_below="@+id/et_password"
        android:layout_marginTop="30dp"
        android:background="@null"
        android:layout_marginLeft="5dp"
        android:hint="Confirm password"
        android:inputType="phone"
        android:maxLines="1"
        android:textColor="@color/colorGray2"
        android:textColorHint="@color/colorGray2"
        android:textCursorDrawable="@null"
        android:textSize="20dp" />

    <View
        android:id="@+id/view_confirm_password"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_below="@+id/et_confirm_password"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="35dp"
        android:layout_marginRight="35dp"
        android:layout_marginTop="5dp"
        android:background="@color/colorDarkGray"></View>

    <at.markushi.ui.CircleButton
        android:id="@+id/bt_next"
        android:layout_width="84dip"
        android:layout_height="84dip"
        android:src="@drawable/yes_icon"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/view_confirm_password"
        android:layout_marginTop="35dp"
        app:cb_color="@color/black"
        app:cb_pressedRingWidth="8dip" />

    <TextView
        android:id="@+id/tv_terms"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_above="@+id/bt_sign_in"
        android:layout_marginBottom="20dp"
        android:text="terms and conditions"
        android:textColor="@color/colorGray"
        android:textSize="16dp" />

    <View
        android:id="@+id/view_up3"
        android:layout_width="150dp"
        android:layout_height="0.5dp"
        android:layout_above="@+id/bt_sign_in"
        android:layout_marginBottom="20dp"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="35dp"
        android:layout_marginRight="35dp"
